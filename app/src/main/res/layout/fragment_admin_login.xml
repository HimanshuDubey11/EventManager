<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AdminLoginFragment">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/adminfragmaintext"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:text="ADMIN LOGIN"
            android:layout_height="wrap_content" />


        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_below="@id/adminfragmaintext"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:hint="Admin ID"
            android:id="@+id/adminfragenroll"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_below="@id/adminfragenroll"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:hint="Password"
            android:id="@+id/adminfragpass"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:text="SUBMIT"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:layout_width="wrap_content"
            android:layout_below="@id/adminfragpass"
            android:id="@+id/adminfragsubmitbtn"
            android:layout_height="wrap_content" />

        
    </RelativeLayout>
    
</FrameLayout>