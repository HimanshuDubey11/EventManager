<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AdminSignUp">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/adminsignuptitle"
        android:textSize="40dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="SignUp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/adminsignuptitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/adminsignupenroll"
            android:hint="Admin ID"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_below="@id/adminsignupenroll"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/adminsignupname"
            android:hint="Name"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_below="@id/adminsignupname"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/adminsignuppass"
            android:hint="PASSWORD"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/adminsignupbtn"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:layout_below="@id/adminsignuppass"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>