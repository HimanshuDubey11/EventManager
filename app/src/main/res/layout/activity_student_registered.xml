<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentRegisteredActivity">

    <TextView
        android:id="@+id/resgiteredhead"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#4eb645"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:text="REGISTERED\nSUCCESSFULLY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/resgiteredeventname"
        android:layout_below="@id/resgiteredhead"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="EventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resgiteredenrollment"
        android:layout_below="@id/resgiteredeventname"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Enrollment No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resgiteredname"
        android:layout_below="@id/resgiteredenrollment"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/resgiteredemail"
        android:layout_below="@id/resgiteredname"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="EmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/resgiteredcontact"
        android:layout_below="@id/resgiteredemail"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/paynow"
        android:layout_below="@id/resgiteredcontact"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:background="@drawable/addneweventbutton"
        android:text="PayNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/moreevents"
        android:layout_below="@id/paynow"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:background="@drawable/addneweventbutton"
        android:text="More Events..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>