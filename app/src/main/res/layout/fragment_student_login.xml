<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StudentLoginFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/stufragmaintext"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:text="STUDENT LOGIN"
            android:layout_height="wrap_content" />


        <EditText
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:layout_width="match_parent"
            android:layout_below="@id/stufragmaintext"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:hint="Enrollment Number"
            android:id="@+id/stufragenroll"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <EditText
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_below="@id/stufragenroll"
            android:layout_margin="20dp"
            android:textAlignment="center"
            android:hint="Password"
            android:id="@+id/stufragpass"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <Button
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:background="@drawable/addneweventbutton"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:layout_width="wrap_content"
            android:layout_below="@id/stufragpass"
            android:id="@+id/stufragsubmitbtn"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/stufragsignuptext"
            android:layout_below="@id/stufragsubmitbtn"
            android:text="SignUp Now!"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>