<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/edittextbackground"
    android:layout_height="wrap_content"
    tools:context=".utility.EventAdapter">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="30dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/eventadapterrelativelayout"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/addneweventbutton"
                android:textColor="#ffffff"
                android:id="@+id/eventname"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:text="EventName"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />


            <TextView
                android:textColor="#ffffff"
                android:id="@+id/eventtype"
                android:textSize="25dp"
                android:layout_below="@id/eventname"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_width="200dp"
                android:text="Event Type"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@id/eventtype"
                android:layout_width="wrap_content"
                android:id="@+id/relativedate"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    android:fontFamily="casual"
                    android:id="@+id/eventstart"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:text="Date"
                    android:textColor="#9352c1"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>