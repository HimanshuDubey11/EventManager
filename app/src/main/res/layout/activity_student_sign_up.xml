<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentSignUp">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/stusignuptitle"
        android:textSize="40dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:text="SignUp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_below="@id/stusignuptitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/stusignupenroll"
            android:hint="Enrollment Number"
            android:layout_height="wrap_content" />

        <EditText
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_below="@id/stusignupenroll"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/stusignupname"
            android:hint="Name"
            android:layout_height="wrap_content" />

        <EditText
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:layout_below="@id/stusignupname"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/stusignuppass"
            android:hint="Password"
            android:layout_height="wrap_content" />

        <EditText
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/stusignuppass"
            android:hint="Contact Number"
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:id="@+id/studignupcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/studignupcontact"
            android:hint="Email"
            android:padding="10dp"
            android:background="@drawable/edittextbackground"
            android:id="@+id/stusignupemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/addneweventbutton"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/stusignupbtn"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:layout_below="@id/stusignupemail"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

</RelativeLayout>